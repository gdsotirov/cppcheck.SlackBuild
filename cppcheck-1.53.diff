diff -urNad cppcheck-1.53-orig//Makefile cppcheck-1.53/Makefile
--- cppcheck-1.53-orig//Makefile	2012-02-11 09:23:45.000000000 +0200
+++ cppcheck-1.53/Makefile	2017-10-12 18:48:08.243482420 +0300
@@ -7,6 +7,8 @@
 
 ifndef CXXFLAGS
     CXXFLAGS=-O2 -DNDEBUG -Wall
+else
+    CXXFLAGS+=-O2 -DNDEBUG -Wall
 endif
 
 ifeq ($(HAVE_RULES),yes)
@@ -39,10 +41,11 @@
 endif
 
 BIN=$(DESTDIR)$(PREFIX)/bin
+MAN=$(DESTDIR)$(PREFIX)/man
 
 # For 'make man': sudo apt-get install xsltproc docbook-xsl docbook-xml on Linux
-DB2MAN=/usr/share/sgml/docbook/stylesheet/xsl/nwalsh/manpages/docbook.xsl
-XP=xsltproc -''-nonet -''-param man.charmap.use.subset "0"
+DB2MAN=/etc/asciidoc/docbook-xsl/manpage.xsl
+XP=xsltproc -''-nonet -''-param man.charmap.use.subset "0" --output man/
 MAN_SOURCE=man/cppcheck.1.xml
 
 
@@ -144,7 +147,7 @@
 cppcheck: $(LIBOBJ) $(CLIOBJ) $(EXTOBJ)
 	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LDFLAGS) -o cppcheck $(CLIOBJ) $(LIBOBJ) $(EXTOBJ) $(LIBS)
 
-all:	cppcheck testrunner
+all:	cppcheck testrunner man
 
 testrunner: $(TESTOBJ) $(LIBOBJ) $(EXTOBJ) cli/threadexecutor.o cli/cmdlineparser.o cli/cppcheckexecutor.o cli/filelister.o cli/pathmatch.o
 	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(LDFLAGS) -o testrunner $(TESTOBJ) $(LIBOBJ) cli/threadexecutor.o cli/cppcheckexecutor.o cli/cmdlineparser.o cli/filelister.o cli/pathmatch.o $(EXTOBJ) $(LIBS)
@@ -170,9 +173,11 @@
 tags:
 	ctags -R --exclude=doxyoutput .
 
-install: cppcheck
+install: cppcheck man/cppcheck.1
 	install -d ${BIN}
 	install cppcheck ${BIN}
+	install -d ${MAN}/man1
+	install man/cppcheck.1 ${MAN}/man1/cppcheck.1
 
 
