diff -urNad cppcheck-1.42-orig/Makefile cppcheck-1.42/Makefile
--- cppcheck-1.42-orig/Makefile	2010-03-09 20:07:43.000000000 +0200
+++ cppcheck-1.42/Makefile	2017-10-12 15:48:53.908487426 +0300
@@ -1,10 +1,11 @@
-CXXFLAGS=-Wall -Wextra -pedantic -Wfloat-equal -Wcast-qual -Wlogical-op -O2 -DNDEBUG
+CXXFLAGS+=-Wall -Wextra -pedantic -Wfloat-equal -Wcast-qual -Wlogical-op -O2 -DNDEBUG
 CXX=g++
 BIN=${DESTDIR}/usr/bin
+MAN=${DESTDIR}/usr/man
 
 # For 'make man': sudo apt-get install xsltproc docbook-xsl docbook-xml
-DB2MAN=/usr/share/sgml/docbook/stylesheet/xsl/nwalsh/manpages/docbook.xsl
-XP=xsltproc -''-nonet -''-param man.charmap.use.subset "0"
+DB2MAN=/etc/asciidoc/docbook-xsl/manpage.xsl
+XP=xsltproc -''-nonet -''-param man.charmap.use.subset "0" --output man/
 MAN_SOURCE=man/cppcheck.1.xml
 
 
@@ -66,7 +67,7 @@
 cppcheck:	$(LIBOBJ)	$(CLIOBJ)
 	$(CXX) $(CXXFLAGS) -o cppcheck $(CLIOBJ) $(LIBOBJ) $(LDFLAGS)
 
-all:	cppcheck	testrunner	tools
+all:	cppcheck	testrunner	tools	man
 
 testrunner:	$(TESTOBJ)	$(LIBOBJ)
 	$(CXX) $(CXXFLAGS) -o testrunner $(TESTOBJ) $(LIBOBJ) $(LDFLAGS)
@@ -77,12 +78,15 @@
 clean:
 	rm -f lib/*.o cli/*.o test/*.o testrunner cppcheck
 
-man:	$(MAN_SOURCE)
+man: cppcheck.1
+cppcheck.1: $(MAN_SOURCE)
 	$(XP) $(DB2MAN) $(MAN_SOURCE)
 
-install:	cppcheck
+install:	cppcheck	cppcheck.1
 	install -d ${BIN}
 	install cppcheck ${BIN}
+	install -d ${MAN}/man1
+	install man/cppcheck.1 ${MAN}/man1/cppcheck.1
 
 
 ###### Build
